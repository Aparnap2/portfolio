{
  "name": "ai-transformation-automation",
  "version": "1.0.0",
  "description": "Automates Phase 1 & 2 of Morningside AI Transformation Method",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate": "node scripts/validate-system.js"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@google/generative-ai": "^0.21.0",
    "@langchain/langgraph": "^0.2.65",
    "@playwright/test": "^1.55.0",
    "dotenv": "^16.4.7",
    "fastify": "^4.24.3",
    "pg": "^8.11.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
