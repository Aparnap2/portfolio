# Portfolio Feature Confidence Scoring - Environment Configuration

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Next.js Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# AI & LANGUAGE MODELS
# =============================================================================

# Google AI (Gemini) - Required for chat functionality
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL_NAME=gemini-1.5-flash
HISTORY_MODEL=gemini-1.5-flash

# AI Chat Configuration
MAX_CHAT_HISTORY=5
MAX_TOKENS=2500
TEMPERATURE=0.1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database (Optional - enables persistent storage)
DATABASE_URL=postgresql://username:password@localhost:5432/portfolio_db

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Upstash Redis (Required for sessions and queues)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# Redis Session Configuration
SESSION_TTL=7200

# =============================================================================
# VECTOR DATABASE (OPTIONAL)
# =============================================================================

# Enable/Disable Vector DB and Embeddings
ENABLE_VECTOR_DB=true
ENABLE_EMBEDDINGS=true

# AstraDB Configuration (if using vector search)
ASTRA_DB_APPLICATION_TOKEN=your_astra_token
ASTRA_DB_API_ENDPOINT=your_astra_endpoint
ASTRA_DB_NAMESPACE=default_keyspace
ASTRA_DB_COLLECTION=portfolio_docs

# =============================================================================
# HUBSPOT INTEGRATION
# =============================================================================

# HubSpot API Configuration
HUBSPOT_ACCESS_TOKEN=your_hubspot_access_token

# HubSpot Custom Property Mapping (Optional)
HUBSPOT_PROP_PROJECT_TYPE=project_type
HUBSPOT_PROP_BUDGET=budget_range
HUBSPOT_PROP_TIMELINE=project_timeline
HUBSPOT_PROP_NOTES=lead_notes

# HubSpot Processing Mode
HUBSPOT_DECOUPLED=true

# =============================================================================
# DISCORD NOTIFICATIONS
# =============================================================================

# Discord Webhook for Notifications (Optional)
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Discord Bot Configuration (Optional)
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CHANNEL_ID=your_discord_channel_id

# =============================================================================
# RABBITMQ CONFIGURATION (OPTIONAL)
# =============================================================================

# RabbitMQ Connection (Alternative to Redis queues)
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_EXCHANGE=portfolio_exchange
RABBITMQ_QUEUE_HUBSPOT=hubspot_sync
RABBITMQ_QUEUE_DISCORD=discord_notifications

# =============================================================================
# LEAD CAPTURE CONFIGURATION
# =============================================================================

# Lead Capture Behavior
LEAD_CAPTURE_ALWAYS_STORE=true
LEAD_DEDUPLICATION_WINDOW=86400000

# =============================================================================
# WORKER CONFIGURATION
# =============================================================================

# HubSpot Worker Settings
HUBSPOT_WORKER_SCHEDULE=*/2 * * * *
WORKER_BATCH_SIZE=10
WORKER_CONCURRENCY=5
WORKER_RETRY_ATTEMPTS=3
WORKER_RETRY_DELAY=5000

# Discord Worker Settings
DISCORD_WORKER_SCHEDULE=*/1 * * * *
DISCORD_WORKER_BATCH_SIZE=20
DISCORD_WORKER_RETRY_ATTEMPTS=3
DISCORD_WORKER_RETRY_DELAY=2000

# =============================================================================
# LEGACY COMPATIBILITY
# =============================================================================

# MongoDB Session Logging (Legacy)
MONGO_SESSION_LOGGING_ENABLED=false
MONGODB_URI=your_mongodb_connection_string

# =============================================================================
# SECURITY & MONITORING
# =============================================================================

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Circuit Breaker Configuration
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# Logging Level
LOG_LEVEL=info

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Debug Flags
DEBUG_CHAT=false
DEBUG_LEAD_CAPTURE=false
DEBUG_WORKERS=false

# Development Mode Features
DEV_MOCK_HUBSPOT=false
DEV_MOCK_DISCORD=false
DEV_SKIP_VECTOR_DB=false